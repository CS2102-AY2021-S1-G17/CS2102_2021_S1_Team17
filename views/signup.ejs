<script>
$("#role").change(function() {
    if ($(this).val() == "both") {
    $('#both').show();
    $('#po').hide();
    $('#ct').hide();
    $('.ct').removeAttr('required');
    $('.po').removeAttr('required');
    $('.both').attr('required', '');
    } else if ($(this).val() == "pet_owner") {
    $('#ct').hide();
    $('#both').hide();
    $('#po').show();
    $('.ct').removeAttr('required');
    $('.both').removeAttr('required');
    $('.po').attr('required', '');
    } else {
    $('#po').hide();
    $('#both').hide();
    $('#ct').show();
    $('.both').removeAttr('required');
    $('.po').removeAttr('required');
    $('.co').attr('required', '');
    }
});
