<!DOCTYPE html> 
<html> 
<head> 
    <title>History Transactions</title> 
    <% include ../partials/_ct_header %>
    <link href="/stylesheets/ct_availability.css" rel="stylesheet">
</head> 
<body>
    <div class="row justify-content-center">
   <div class="col m-2">
       <section class="card">
           <div class="twt-feed blue-bg">
               <div class="corner-ribon black-ribon">
               </div>
               <div class="media">
                   <a href="#">
                       <img class="align-self-center rounded-circle mr-3" style="width:85px; height:85px;" alt="" src="../images/paw-solid.svg">
                   </a>
                   <div class="media-body">
                       <h2 class="text-white display-6">My History Transactions</h2>
                       <p class="text-light">View Past Transactions, Ratings and Comments</p>
                   </div>
               </div>
           </div>
   
    <div class="row justify-content-center">
       <div class="col m-2">
           <table class="table" style="background-color:white">
            <thead>
            <tr>
                <th scope="col">Care Taker</th>
                <th scope="col">My Pet</th>
                <th scope="col">Date Range</th>
                <th scope="col">Rating</th>
                <th scope="col">Feedback</th>
            </tr>
            </thead>
        <tr>
        <!-- <img class="align-self-center rounded-circle mr-3" style="width:40px; height:40px;" alt="" src="../images/dove-solid.svg"></td> -->
        <% history.forEach(function (bid) { %>
            <td><%- bid.petowner %></td>
            <td><%- bid.pet_name %></td>
            <td>
            
            </td>
            <td><%- bid.start_date.toDateString() %></td>
            <td><%- bid.end_date.toDateString() %></td>
            <td><%- bid.total_cost %></td>
            <td>
            <button class="btn" data-toggle="modal"
                data-target="#details" data-req="<%= bid.req %>" data-trans="<%= bid.transfer_method%>" data-pay="<%= bid.payment_method %>">
                <img class="align-self-center rounded-circle mr-3" style="width:30px; height:30px;" alt="" src="../images/eye-regular.svg">
            </button>
            </td>
            <td>
            <div style="color:green">Success</div>
            </td>
        <% }); %>
                
      </tr> 
    </tbody>
  </table>
</section>
</div>
</div>
       </div>
    </div>
</body>
</html>