<html>
    <meta name="viewport" content="width=device-width, initial-scale=1">
<head>
    <title><%= title %></title> 
        <% include ../partials/_po_header %>
        <link href="/stylesheets/ct_availability.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/bootstrap.min.css" />
        <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
        <script>
        $( function() {
            $('#daterangepickerbid').daterangepicker();
        } );
        $( function() {
            $('#daterangepickersearch').daterangepicker();
        } );
        $(document).ready( function () {
            $('#table').DataTable();
        } );
        </script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
</head>
<body>
    <div class="row justify-content-center">
        <div class="col m-2">
         <section class="card">
             <div class="twt-feed blue-bg">
                 <div class="corner-ribon black-ribon">
                 </div>
     
                 <div class="media">
                     <a href="#">
                         <img class="align-self-center rounded-circle mr-3" style="width:85px; height:85px;" alt="" src="../images/paw-solid.svg">
                     </a>
                     <div class="media-body">
                         <h2 class="text-white display-6">Jim Doe</h2>
                         <p class="text-light">Pet Owner</p>
                         <a data-role="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#search">Search for Care Takers</a>
                     </div>
                 </div>
             </div>
             <div class="weather-category twt-category">
                 <ul>
                     <li class="active">
                         <h5>88888888</h5>
                         Phone No
                     </li>
                     <li>
                         <h5>1234-1234-1234-1234</h5>
                         Card No
                     </li>
                     <li>
                         <h5>NUS</h5>
                         Preferred Transfer Location
                     </li>
                 </ul>
             </div>
          </section>
        </div>
      </div>
    <div class="row justify-content-center">
    <table id="table" class="display" style="width:80%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Category</th>
                <th>Transfer Location</th>
                <th>Average Rating</th>
                <th>Bid</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Kevin</th>
                <th>12345678</th>
                <th>Cat, Bird</th>
                <th>NUS</th>
                <th>4.3/5.0</th>
                <th><button data-role="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#create">Bid</button></th>
            </tr>
            <tr>
                <th>Jiayi</th>
                <th>11111111</th>
                <th>Cat</th>
                <th>NUS</th>
                <th>5.0/5.0</th>
                <th><button data-role="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#create">Bid</button></th>
            </tr>
            <tr>
                <th>Yongyan</th>
                <th>88888888</th>
                <th>Dog, Bird</th>
                <th>NTU</th>
                <th>4.1/5.0</th>
                <th><button data-role="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#create">Bid</button></th>
            </tr>
            <tr>
                <th>Siyang</th>
                <th>66666666</th>
                <th>Bird</th>
                <th>NUS</th>
                <th>4.6/5.0</th>
                <th><button data-role="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#create">Bid</button></th>
            </tr>
            <tr>
                <th>Minghao</th>
                <th>00000000</th>
                <th>Dog</th>
                <th>NTU</th>
                <th>3.9/5.0</th>
                <th><button data-role="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#create">Bid</button></th>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="modal fade" id="create" role="dialog">
        <div class="modal-dialog">
                    
        <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Create New Bid</h4>
            <button class="close" type="button" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form class="form-newpet" action="/" method="post">
                <label for="inputName" class="sr-only form-control">Pet Name</label>
                <input type="text" id="petname" name="petname" class="form-control"
                  placeholder="Pet Name" required="">
                <label for="inputPhone" class="sr-only form-control">Preferred Care Taker's Phone No</label>
                <input type="text" id="ctphone" name="ctphone" class="form-control"
                  placeholder="Care Taker's Phone No" required="">
                <label for="inputName" class="sr-only form-control">Transfer Method</label>
                <input type="text" id="petname" name="petname" class="form-control"
                  placeholder="Transfer Method" required="">
                <br>
                <label for="inputCategory" class="sr-only form-control">Payment Method</label>
                <select id="payment" name="cat" class="form-control selectpicker" multiple data-live-search="true">
                    <option value="cash">Cash</option>
                    <option value="card">Credit Card</option>
                </select>
                <p>Select Payment Method</p>
                <label for="inputCategory" class="sr-only form-control">Transfer Method</label>
                <select id="transfer" name="cat" class="form-control selectpicker" multiple data-live-search="true">
                    <option value="podeliver">I deliver</option>
                    <option value="ctpickup">Care taker pick up</option>
                    <option value="pcs">PCS building</option>
                </select>
                <p>Select Transfer Method</p>
                <input type="text" style="width: 300px;" id="daterangepickerbid">
                <p>Start Date and End Date</p>
            </form>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Bid</button>
        </div>
        </div>
        </div>
    </div>
    <div class="modal fade" id="search" role="dialog">
        <div class="modal-dialog">
                    
        <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Search for Care Takers</h4>
            <button class="close" type="button" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form class="form-newpet" action="/" method="post">
                <label for="inputName" class="sr-only form-control">Transfer Location</label>
                <input type="text" id="translocation" name="translocation" class="form-control"
                  placeholder="Search by Transfer Location" required="">
                <br>
                <label for="inputCategory" class="sr-only form-control">Pet's Category</label>
                <select id="category" name="category" class="form-control selectpicker" multiple data-live-search="true">
                    <option value="cat">Cat</option>
                    <option value="dog">Dog</option>
                    <option value="bird">Bird</option>
                </select>
                <p>Search by Pet's Category</p>
                <input type="text" style="width: 300px;" id="daterangepickersearch">
                <p>Search by Start Date and End Date</p>
            </form>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Search</button>
        </div>
        </div>
        </div>
    </div>
</body>
</html>