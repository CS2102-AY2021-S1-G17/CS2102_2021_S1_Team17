<html>
    <meta name="viewport" content="width=device-width, initial-scale=1">
<head>
    <title><%= title %></title> 
        <% include ../partials/_po_header %>
        <link href="/stylesheets/ct_availability.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/bootstrap.min.css" />
        <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
        <script>
        $( function() {
            $('#daterangepicker').daterangepicker();
        } );
        </script>
</head>
<body>
    <div class="row justify-content-center">
        <div class="col m-2">
         <section class="card">
             <div class="twt-feed blue-bg">
                 <div class="corner-ribon black-ribon">
                     <i class="fa fa-twitter"></i>
                 </div>
                 <div class="fa fa-twitter wtt-mark"></div>
     
                 <div class="media">
                     <a href="#">
                         <img class="align-self-center rounded-circle mr-3" style="width:85px; height:85px;" alt="" src="images/profilepic.jpeg">
                     </a>
                     <div class="media-body">
                         <h2 class="text-white display-6">Jim Doe</h2>
                         <p class="text-light">Pet Owner</p>
                         <a data-role="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#create">Create New Bid</a>
                     </div>
                 </div>
             </div>
             <div class="weather-category twt-category">
                 <ul>
                     <li class="active">
                         <h5>88888888</h5>
                         Phone No
                     </li>
                     <li>
                         <h5>1234-1234-1234-1234</h5>
                         Card No
                     </li>
                     <li>
                         <h5>NUS</h5>
                         Preferred Transfer Location
                     </li>
                 </ul>
             </div>
          </section>
        </div>
      </div>
    <div class="row justify-content-center">
        <div class="column">
          <div class="card" id="card-day">
            <h3>Care Taker A</h3>
            <p>Rating: 5.0/5.0</p>
            <p>Can Take Care: Dog, Cat</p>
              <p>Phone No: 12345678</p>
          </div>
        </div>
     
        <div class="column">
          <div class="card" id="card-day">
            <h3>Care Taker B</h3>
            <p>Rating: 5.0/5.0</p>
            <p>Can Take Care: Bird</p>
              <p>Phone No: 12345678</p>
          </div>
        </div>
      </div>  
    <div class="row justify-content-center">
        <div class="column">
          <div class="card" id="card-day">
            <h3>Care Taker C</h3>
            <p>Rating: 5.0/5.0</p>
            <p>Can Take Care: Dog, Bird</p>
              <p>Phone No: 12345678</p>
          </div>
        </div>
     
        <div class="column">
          <div class="card" id="card-day">
            <h3>Care Taker D</h3>
            <p>Rating: 5.0/5.0</p>
            <p>Can Take Care: Cat</p>
              <p>Phone No: 12345678</p>
          </div>
        </div>
      </div>
    <div class="modal fade" id="create" role="dialog">
        <div class="modal-dialog">
                    
        <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Create New Bid</h4>
            <button class="close" type="button" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form class="form-newpet" action="/" method="post">
                <label for="inputName" class="sr-only form-control">Pet Name</label>
                <input type="text" id="petname" name="petname" class="form-control"
                  placeholder="Pet Name" required="">
                <label for="inputPhone" class="sr-only form-control">Preferred Care Taker's Phone No</label>
                <input type="text" id="ctphone" name="ctphone" class="form-control"
                  placeholder="Care Taker's Phone No (optional)" required="">
                <br>
                <input type="text" style="width: 300px;" id="daterangepicker">
                <p>Start Date and End Date</p>
            </form>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Bid</button>
        </div>
        </div>
        </div>
    </div>
</body>
</html>